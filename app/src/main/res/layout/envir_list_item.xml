<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/item_padding"
    app:cardElevation="@dimen/card_elevation"
    style="@style/CardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="@dimen/card_padding"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:padding="5dp"
                android:id="@+id/place"
                android:text="@string/place"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="36dp" />
            <Button
                android:layout_marginEnd="@dimen/sub_margin"
                android:id="@+id/menu"
                android:layout_alignParentEnd="true"
                android:drawableStart="@drawable/ic_more_horiz_grey_500_24dp"
                android:background="@null"
                android:layout_width="36dp"
                android:layout_height="36dp" />
            <Button
                android:id="@+id/statistics"
                android:layout_toStartOf="@id/menu"
                android:background="@null"
                android:layout_marginEnd="@dimen/action_button_margin"
                android:drawableEnd="@drawable/ic_poll_blue_500_48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:padding="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/temp"
                    android:text="@string/temp"
                    android:textSize="35sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="@dimen/sub_margin"
                    android:text="@string/temp_sub"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/humi"
                    android:text="@string/temp"
                    android:textSize="35sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="@dimen/sub_margin"
                    android:text="@string/humi_sub"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:padding="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/light"
                    android:text="@string/temp"
                    android:textSize="35sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="@dimen/sub_margin"
                    android:text="@string/light_sub"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
